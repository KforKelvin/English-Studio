    <div id="dictionaryAPI">
        {{!-- Universal textbox --}}
        <div id = "container login-container" class="container login-container" style="width: 440px; margin: flex;"><div class="card" style="background: #061240ab;">
            <div class="row" style="margin-top: 10%; margin-bottom: 4%; padding: 20px;">
                <div id = "inputBox">
                    <label class="custom-field">
                        <input type="text" id="myText" name="fname" style="font-family:inherit" required />
                        <span class="placeholder">Enter Text</span>
                        <button class="text_submit" type="submit" id="submit_button" onclick = "getWordData(); extract_from_textbox(); setPractice();"><i class="fas fa-paper-plane"></i> Submit Word</button>
                         
                    </label>
                </div>
            </div>
        </div></div>

    {{!-- Speech API material --}}
    <div id = "container login-container" class="container login-container" style="height: 100%; width: 100%; padding-left: 10%; padding-right:10%;"><div class="card">
        <header>Speak it!</header>
        <div class = "row" style="text-align: center;">  
            <!-- Record user audio -->
            <div class="split" style="background-color: none; vertical-align: center; border:none; flex:50%; width:50%;">
            <div class="row" style="border: 3px outset lightgrey; padding:2%; margin-top:6%; margin-bottom:6%; background-color: #f2f2f2; text-align: center;
                                justify-content: center; align-items: center;">
                <div class="tripple" style="border-right: 1px solid grey; padding-right:10px;">
                    <button class="recbutton" id="startRecord">Start Recording</button><br>
                </div>
                <div class="tripple">
                    <button class="recbutton" style="padding-left:10px; padding-right:10px; margin-left:0px; margin-right:30px" id="pause" disabled>Pause</button><br>
                </div>
                <div class="tripple" style="border-left: 1px solid grey; padding-left:10px;">
                    <button class="recbutton" id="stopRecord" disabled>Stop Recording</button>
                </div>
            </div>
            </div>
            <div class="split" style="background-color: #f2f2f2; flex:35%; width:35%; margin-left:0%;">
                <!-- Process audio on server and display result -->
                <p><b>Pronunciation Score </b></p>
                <p><span id = "score"></span></p>
                <button class="button" id="updateScore" disabled>Get score</button>
            </div>
        </div>
        <div class="row" style="height: flex; padding-left: 3%;padding-right: 3%; padding-bottom: 3%;"><audio id="playback"></audio></div>
    </div></div>


    {{!-- Dictionary API material --}}
