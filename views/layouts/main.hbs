        $(document).ready(function() {
            $('.collapsible').collapsible();
        });

        //Allows the user to press enter on the textbox
        $(document).ready(function(){
            $('#myText').keypress(function(e){
            if(e.keyCode==13)
                $('#submit_button').click();
            });
        });

        const slow_scroll = document.getElementById("parallax")
        window.addEventListener("scroll", function(){
            let scroll_amt = window.pageYOffset;
            slow_scroll.style.backgroundPositionY = scroll_amt * 0.5 + "px";
        })

    </script>


